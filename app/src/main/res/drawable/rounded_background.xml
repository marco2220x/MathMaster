<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Definir bordes redondeados -->
    <corners android:radius="10dp" />

    <!-- Definir solo el contorno con un borde gris claro -->
    <stroke
        android:width="2dp"
        android:color="#D3D3D3" /> <!-- Color gris claro -->

    <!-- Definir espacio de padding -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
